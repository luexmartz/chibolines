<!-- General Styles -->
<link rel="stylesheet" href="https://necolas.github.io/normalize.css/latest/normalize.css" type="text/css" charset="utf-8" />
<%= stylesheet_link_tag "application", "custom.css", params[:controller], media: "all", "data-turbolinks-track" => true %>

<!-- Style & fonts for each page that needs specific styles -->
<% case @controlador%>
	<% when "static_pages" %>
		<% case @accion %>
			<%when "landing_page" %>
				<%= stylesheet_link_tag "devices.css", media: "all", "data-turbolinks-track" => true %>
		<% end %>
<% end %>